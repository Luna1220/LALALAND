<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp">


    <RelativeLayout
        android:id="@+id/layout_voiceMemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:choiceMode="multipleChoice"
        android:listSelector="#D3D3D3"
        android:background="@android:color/transparent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/tv_contentRecord"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:maxLines="5"
                android:ellipsize="end"
                android:textSize="16sp"
                android:fontFamily="@font/ptsans_bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_content"
                android:fontFamily="@font/ptsans_narrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_titleRecord"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="5" />

            <ImageView
                android:id="@+id/iv_fakeBtn"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignLeft="@+id/tv_titleRecord"
                android:layout_below="@+id/tv_titleRecord"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/simple_play_btn_24px"
                android:backgroundTint="#000000" />
        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>